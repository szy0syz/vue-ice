import { ApolloServer, gql, graphqlKoa, graphiqlKoa } from 'apollo-server-koa'

const typeDefs = gql`
  type Query {
    hello: String
  }
`

const resolvers = {
  Query: {
    hello: () => 'Hello world!'
  }
}

export const addGraqhql = app => {
  console.log(ApolloServer)
  const server = new ApolloServer({ typeDefs, resolvers })
  server.applyMiddleware({ app })
  console.log('添加graqhql', server.graphqlPath, graphqlKoa, graphiqlKoa)
}
